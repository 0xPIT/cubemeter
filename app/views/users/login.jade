extends ../layouts/default

block main
  h1= title

block content
  .container
    .row
      .col-md-6.col-md-offset-3
        .well
          p
            if (message.length)
              .alert.alert-danger= message

          form#login-form(role='form', action='/users/session', method='post')
            input(type='hidden', name='_csrf', value='#{csrf_token}')

            .form-group
              label(for='email') Email address
              input#email.form-control(name='email', placeholder='Email') 

            .form-group
              label(for='password') Password
              input#password.form-control(type='password', name='password', placeholder='Password')

            div
              button.btn.btn-primary(type='submit') Login
              &nbsp;&nbsp;
              a(href='/auth/facebook')
                img.auth-provider(src='/img/facebook.png')
              a(href='/auth/github')
                img.auth-provider(src='/img/github.png')
              a(href='/auth/twitter')
                img.auth-provider(src='/img/twitter.png')
              a(href='/auth/google')
                img.auth-provider(src='/img/google.png')
              a(href='/auth/linkedin')
                img.auth-provider(src='/img/linkedin.png')
              a(href='/auth/xing')
                img.auth-provider(src='/img/xing.png')
              &nbsp;
              | or&nbsp;
              a.show-signup(href='/signup') sign up
